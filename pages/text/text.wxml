<!--pages/text/text.wxml-->

<!-- 1. 基本使用 -->
<text>HelloWorld\n</text>
<text>hello miniprogram\n\n</text>

<!-- 2. selectable -->
<!-- 默认情况下text中文本不能被选中 -->
<text selectable="{{false}}">Hello DandyChan\n</text>
<!-- 需要用mustache来写，在属性里true/false的，有就是true，没写就是默认的false -->
<text selectable>Hello DandyChan\n\n</text> <!-- 这样就是true -->

<!-- 3. space决定文本空格大小 -->
<text>Hello World\n</text>
<text space="nbsp">Hello World\n</text> <!-- 根据字体设置的空格大小 -->
<text space="ensp">Hello World\n</text> <!-- 中文字符空格一半大小 -->
<text space="emsp">Hello World\n</text> <!-- 中文字符空格大小 -->

<!-- 4. decode属性：是否解码文本 -->
<text decode>5 &gt; 3</text> <!-- 一个大于号 -->