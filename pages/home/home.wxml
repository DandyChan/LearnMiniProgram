<!-- 5. 展示商品数据 -->
<w-goods goods="{{goods[currentType].list}}"/>

<!-- 6. 回到顶部 -->
<!-- hidden: 对于自定义的组件是无效的 -->
<w-backtop wx:if="{{showBackTop}}"/>