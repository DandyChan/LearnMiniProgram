<!-- 使用了自定义组件 -->
<w-swiper list="{{banners}}"/>

<!-- 2. 推荐数据的展示 -->
<w-recommend recommends="{{recommends}}" bind:imageLoad="handleImageLoad"/>

<!-- 3. 本周流行的展示 -->
<w-popular/>

<!-- 4. tab-control -->
